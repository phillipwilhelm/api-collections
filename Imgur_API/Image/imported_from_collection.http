#!/usr/bin/env dothttp

// Get information about an image.
@name("Image")
GET "https://api.imgur.com/3/image/{{imageHash}}"
"Authorization": "Client-ID {{clientId}}"


// Upload a new image or video.// // #### Accepted Video Formats// | MIME Type        | // |------------------|// | video/mp4        |// | video/webm       |// | video/x-matroska |// | video/quicktime  |// | video/x-flv      |// | video/x-msvideo  |// | video/x-ms-wmv   |// | video/mpeg       |
@name("Image Upload")
POST "https://api.imgur.com/3/upload"
"Authorization": "Client-ID {{clientId}}"
files(
	("image", "None"),
	("video", "None"),
	("album", "{{albumHash}}"),
	("type", "url"),
	("name", "pixel.gif"),
	("title", "1x1 Pixel"),
	("description", "This is an 1x1 pixel image."),
	("disable_audio", "1")
)


// Deletes an image.// // #### Response Model: [Basic](https://api.imgur.com/models/basic)
@name("Image Deletion (Un-Authed)")
DELETE "https://api.imgur.com/3/image/{{imageDeleteHash}}"
"Authorization": "Client-ID {{clientId}}"



// Deletes an image.// // #### Response Model: [Basic](https://api.imgur.com/models/basic)
@name("Image Deletion (Authed)")
DELETE "https://api.imgur.com/3/image/{{imageHash}}"
"Authorization": "Bearer {{accessToken}}"



// Updates the title or description of an image.// // #### Response Model: [Basic](https://api.imgur.com/models/basic)// // #### Parameters// // | Key         | Required | Description                   |// |-------------|----------|-------------------------------|// | title       | optional | The title of the image.       |// | description | optional | The description of the image. |
@name("Update Image Information (Un-Authed)")
POST "https://api.imgur.com/3/image/{{imageDeleteHash}}"
"Authorization": "Client-ID {{clientId}}"
files(
	("title", "Heart"),
	("description", "This is an image of a heart outline.")
)


// Updates the title or description of an image.// // #### Response Model: [Basic](https://api.imgur.com/models/basic)// // #### Parameters// // | Key         | Required | Description                   |// |-------------|----------|-------------------------------|// | title       | optional | The title of the image.       |// | description | optional | The description of the image. |
@name("Update Image Information (Authed)")
POST "https://api.imgur.com/3/image/{{imageHash}}"
"Authorization": "Bearer {{accessToken}}"
files(
	("title", "Heart"),
	("description", "This is an image of a heart outline.")
)


// Favorite an image with the given ID. The user is required to be logged in to favorite the image.// // // #### Response Model: [Basic](https://api.imgur.com/models/basic)
@name("Favorite an Image")
POST "https://api.imgur.com/3/image/{{imageHash}}/favorite"
"Authorization": "Bearer {{accessToken}}"




